<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Smart Helmet | Guardian Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <style>
    :root {
      --primary-cyan: #00f2fe;
      --primary-blue: #4facfe;
      --glass: rgba(255, 255, 255, 0.08);
      --glass-border: rgba(255, 255, 255, 0.2);
      --label-color: #00d2ff; /* Bright Electric Blue for Labels */
      --text-main: #ffffff;    /* Pure White for Data */
    }

    body {
      background: #0f172a;
      background-image: 
        radial-gradient(at 0% 0%, rgba(79, 172, 254, 0.2) 0, transparent 50%),
        radial-gradient(at 100% 100%, rgba(0, 242, 254, 0.15) 0, transparent 50%);
      color: var(--text-main);
      font-family: 'Inter', system-ui, sans-serif;
      min-height: 100vh;
      overflow-x: hidden;
    }

    /* Sidebar Fixes */
    .sidebar {
      width: 280px; height: 100vh; position: fixed; left: 0; top: 0;
      background: rgba(15, 23, 42, 0.9); backdrop-filter: blur(20px);
      border-right: 1px solid var(--glass-border); padding: 2rem; z-index: 1000;
    }

    .nav-link { color: #cbd5e1; padding: 0.8rem 1rem; border-radius: 12px; display: flex; align-items: center; text-decoration: none; transition: 0.3s; }
    .nav-link:hover { background: var(--glass); color: var(--primary-cyan); }

    .main-content { margin-left: 280px; padding: 2.5rem; }

    /* Visibility Improvements */
    .glass-card {
      background: var(--glass); backdrop-filter: blur(12px);
      border: 1px solid var(--glass-border); border-radius: 24px;
      padding: 2rem; height: 100%;
    }

    .info-label {
      color: var(--label-color); /* Now bright blue */
      font-size: 0.75rem;
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: 1.2px;
      display: block;
      margin-bottom: 4px;
    }

    .info-value {
      color: var(--text-main); /* Now pure white */
      font-size: 1.1rem;
      font-weight: 600;
    }

    .subtitle-bright {
      color: #94a3b8; /* Lighter gray for secondary text */
      font-size: 1rem;
    }

    .bright-span {
      color: var(--primary-cyan);
      font-weight: bold;
    }

    /* Sensor Grid */
    .sensor-box {
      background: rgba(0, 0, 0, 0.4);
      border: 1px solid var(--glass-border);
      border-radius: 20px; padding: 1.5rem; text-align: center;
    }
    
    .sensor-label { color: #e2e8f0; font-size: 0.85rem; margin-top: 8px; }

    /* Alert Pulse */
    .alert-card {
      display: none;
      background: linear-gradient(135deg, #ef4444, #b91c1c);
      animation: alertPulse 1.5s infinite alternate;
    }

    @keyframes alertPulse {
      from { box-shadow: 0 0 20px rgba(239, 68, 68, 0.6); transform: scale(1); }
      to { box-shadow: 0 0 40px rgba(239, 68, 68, 0.9); transform: scale(1.02); }
    }

    @media (max-width: 992px) {
      .sidebar { width: 80px; padding: 1.5rem 0.5rem; }
      .sidebar span { display: none; }
      .main-content { margin-left: 80px; }
    }
  </style>
</head>
<body>

  <nav class="sidebar">
    <h3 class="fw-bold mb-5" style="color: var(--primary-cyan)">HELMET<span class="text-white">.IO</span></h3>
    <a href="/auth/dashboard" class="nav-link active"><i class="bi bi-grid-1x2-fill me-2"></i> <span>Dashboard</span></a>
    <a href="/auth/family" class="nav-link"><i class="bi bi-shield-lock-fill me-2"></i> <span>Family Safety</span></a>
    <a href="/auth/logout" class="nav-link text-danger mt-auto"><i class="bi bi-power me-2"></i> <span>Sign Out</span></a>
  </nav>

  <main class="main-content">
    
    <div id="fallAlert" class="glass-card alert-card text-center mb-5 text-white">
      <h1 class="fw-bold mb-3">ðŸš¨ IMPACT DETECTED!</h1>
      <p class="lead">Emergency help will be summoned in <span id="timer" class="fw-bold fs-1">120</span>s</p>
      <div class="d-flex justify-content-center gap-3 mt-4">
        <button class="btn btn-light fw-bold px-4" onclick="imSafe()">I AM OKAY</button>
        <button class="btn btn-outline-light px-4" onclick="imNotSafe()">SEND NOW</button>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-md-12">
        <h1 class="fw-bold mb-1">System Control Center</h1>
        <p class="subtitle-bright">Logged in as: <span class="bright-span"><%= user.username %></span> | Status: <span class="text-success fw-bold">ACTIVE PROTECTION</span></p>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-xl-4 col-lg-5">
        <div class="glass-card">
          <h4 class="mb-4 border-bottom border-secondary pb-2">Rider Profile</h4>
          
          <div class="mb-4">
            <span class="info-label">Email Address</span>
            <span class="info-value"><%= user.email %></span>
          </div>

          <div class="mb-4">
            <span class="info-label">Emergency Phone</span>
            <span class="info-value"><%= user.phone || 'Not Configured' %></span>
          </div>

          <div class="mb-4">
            <span class="info-label">Vehicle Identifier</span>
            <span class="info-value"><%= user.vehicle || 'No Vehicle Linked' %></span>
          </div>

          <a href="/auth/family" class="btn btn-primary w-100 rounded-pill fw-bold shadow-sm">
             <i class="bi bi-pencil-square me-2"></i>Edit Emergency Contacts
          </a>
        </div>
      </div>

      <div class="col-xl-8 col-lg-7">
        <div class="glass-card">
          <h4 class="mb-4 border-bottom border-secondary pb-2">Live Sensor Diagnostics</h4>
          <div class="row g-3">
            <div class="col-sm-4">
              <div class="sensor-box">
                <i class="bi bi-activity fs-2 text-info"></i>
                <div class="sensor-label">Fall Tracking</div>
                <div class="fw-bold text-success mt-1"><i class="bi bi-check-circle-fill small"></i> READY</div>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="sensor-box">
                <i class="bi bi-droplet fs-2 text-warning"></i>
                <div class="sensor-label">Alcohol Sensor</div>
                <div class="fw-bold text-success mt-1"><i class="bi bi-check-circle-fill small"></i> READY</div>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="sensor-box">
                <i class="bi bi-eye fs-2 text-danger"></i>
                <div class="sensor-label">Drowsiness</div>
                <div class="fw-bold text-success mt-1"><i class="bi bi-check-circle-fill small"></i> READY</div>
              </div>
            </div>
          </div>

          <div class="mt-4 p-3 bg-dark bg-opacity-50 rounded-4 border border-info border-opacity-25">
             <div class="d-flex align-items-center">
                <div class="spinner-grow spinner-grow-sm text-info me-3" role="status"></div>
                <span class="text-white small fw-bold">ESP32 Linked: Receiving real-time telemetry via Secure Node</span>
             </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    // Logic remains exactly as requested
    setInterval(() => {
      fetch('/alert/check-fall')
        .then(res => res.json())
        .then(data => {
          if (data.alert) {
            document.getElementById('fallAlert').style.display = 'block';
            startTimer();
          }
        });
    }, 5000);

    let timerInterval;
    function startTimer() {
      let time = 120;
      document.getElementById('timer').innerText = time;
      if(timerInterval) clearInterval(timerInterval);
      timerInterval = setInterval(() => {
        time--;
        document.getElementById('timer').innerText = time;
        if (time <= 0) {
          clearInterval(timerInterval);
          imNotSafe();
        }
      }, 1000);
    }

    function imSafe() {
      clearInterval(timerInterval);
      document.getElementById('fallAlert').style.display = 'none';
      alert("Alert Cancelled.");
    }

    function imNotSafe() {
      clearInterval(timerInterval);
      document.getElementById('fallAlert').style.display = 'none';
      alert("Alert Sent to Family.");
    }
  </script>
</body>
</html>
