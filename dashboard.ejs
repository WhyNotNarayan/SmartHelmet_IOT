<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Smart Helmet Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .sidebar { background: #2c3e50; height: 100vh; position: fixed; width: 250px; padding: 20px; color: white; }
    .sidebar a { color: white; display: block; padding: 10px; text-decoration: none; }
    .sidebar a:hover { background: #34495e; }
    .main { margin-left: 250px; padding: 40px; }
    .alert-card { display: none; }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <h3>Smart Helmet</h3>
    <a href="/auth/dashboard">Dashboard</a>
    <a href="/auth/family">Family Emails</a>
    <a href="/auth/logout">Logout</a>
  </div>

  <!-- Main Dashboard -->
  <div class="main">
    <h1>Welcome, <%= user.username %></h1>
    <p>Email: <%= user.email %></p>
    <p>Phone: <%= user.phone %></p>
    <p>Vehicle: <%= user.vehicle %></p>

    <h2>Sensor Diagnostics</h2>
    <div class="card mb-4">
      <div class="card-body">
        <p>Fall Detection: READY</p>
        <p>Alcohol: READY</p>
        <p>Drowsiness: READY</p>
      </div>
    </div>

    <!-- Fall Alert Card -->
    <div id="fallAlert" class="alert-card card bg-danger text-white mb-4">
      <div class="card-body">
        <h3>ðŸš¨ FALL DETECTED!</h3>
        <p>Time left: <span id="timer">120</span> seconds</p>
        <button class="btn btn-light" onclick="imSafe()">I am safe</button>
        <button class="btn btn-dark" onclick="imNotSafe()">I am not safe</button>
      </div>
    </div>

    <a href="/auth/family" class="btn btn-primary">Manage Family Emails</a>
  </div>

  <script>
    console.log("User ID: <%= user._id %>");
    // For real fall from ESP32 (poll server every 5 sec)
    setInterval(() => {
      fetch('/alert/check-fall')
        .then(res => res.json())
        .then(data => {
          if (data.alert) {
            document.getElementById('fallAlert').style.display = 'block';
            startTimer();
          }
        });
    }, 5000);

    let timerInterval;
    function startTimer() {
      let time = 120;
      timerInterval = setInterval(() => {
        time--;
        document.getElementById('timer').innerText = time;
        if (time <= 0) {
          clearInterval(timerInterval);
          imNotSafe();  // Auto send on timeout
        }
      }, 1000);
    }

    function imSafe() {
      clearInterval(timerInterval);
      alert("Alert cancelled");
      document.getElementById('fallAlert').style.display = 'none';
    }

    function imNotSafe() {
      clearInterval(timerInterval);
      alert("Alert sent to family");
      document.getElementById('fallAlert').style.display = 'none';
    }
  </script>
</body>
</html>